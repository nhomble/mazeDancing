m = Maze()
m.step()
m.turn(Direction.RIGHT)
m.step()
m.step()
m.turn(Direction.LEFT)
m.turn(Direction.LEFT)
m.step()
m.turn(Direction.RIGHT)
m.step()
m.print_maze()
sc, wo = m.best_path()
print("scout")
for x in sc:
	print(Direction.to_string[x])
print("--")
print("worker")
for x in wo:
	print(Direction.to_string[x])

